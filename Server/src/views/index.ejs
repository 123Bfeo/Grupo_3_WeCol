<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head') %>

  <body>
    <%- include('./components/header/HeaderClient') %>
    <main class="main">
      <section class="hero">
        <div class="hero-content">
          <img src="/img/mouse-logitech.png" alt="Banner" title="Banner" />
          <div class="hero-product">
            <h2 class="titulo white">Logitech Mx Master 3</h2>
            <a href="/productCart" class="btn btn-add-cart">
              <span>Añadir al carrito</span>
              <i class="fas fa-shopping-cart"></i>
            </a>
          </div>
        </div>
      </section>
      <section class="hero-recommended wrapper">
        <div class="recommended-content">
          <article class="left-img">
            <picture>
              <img src="/img/mouse.png" alt="" />
            </picture>
          </article>
          <article class="right-img">
            <picture class="img-top">
              <img src="/img/headphone.png" alt="Headphone" title="Headphone" />
            </picture>
            <picture class="img-bottom">
              <img
                src="/img/marshall.png"
                alt="Marshall Speaker"
                title="Marshall Speaker"
              />
            </picture>
          </article>
        </div>
      </section>
      <section class="new wrapper">
        <article class="cards_container">
          <%- include('./partials/card') %>
        </article>
      </section>
      <section class="products">
        <ul>
          <% for (let i = 0; i < product.length; i++) { %>
          <li>
            <a href="/product/detail/<%=product[i].id%>">
              <%= product[i].name %></a
            >
          </li>
          <% } %>
        </ul>
      </section>
      <section class="brands wrapper">
        <h3 class="subtituloH3 placeholder">Manejamos las siguientes marcas</h3>
        <article class="brand-list">
          <h2 class="brand">Samsung</h2>
          <h2 class="brand">Apple</h2>
          <h2 class="brand">Logitech</h2>
          <h2 class="brand">Marshall</h2>
          <h2 class="brand">Beats</h2>
          <h2 class="brand">Alien</h2>
        </article>
      </section>
      <section class="newsLater">
        <i class="fas fa-newspaper"></i>
        <article class="updates">
          <h2>Recibir actualizaciones</h2>
          <p>
            Registrese ahora y obtenga las últimas actualizaciones y
            promociones.
          </p>
        </article>
        <article class="e-mail">
          <input type="e-mail" placeholder="Ingrese su correo" />
          <button type="submit" class="btn-enviar">Enviar</button>
        </article>
      </section>
    </main>

    <%- include('./partials/Footer') %>
  </body>
</html>
