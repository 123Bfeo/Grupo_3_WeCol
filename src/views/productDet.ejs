  <script>
    function aumentar() {
      let cambioDeValor = parseInt(document.getElementById("cantidad").value);
      ++cambioDeValor; //cambioDeValor += 1;  //cambioDeValor + 1;
      document.getElementById("cantidad").value = cambioDeValor;
    }
    function disminuir() {
      let cambioDeValor = parseInt(document.getElementById("cantidad").value);
      if (cambioDeValor > 0) {
        --cambioDeValor; //cambioDeValor -= 1;  //cambioDeValor - 1;
      }
      document.getElementById("cantidad").value = cambioDeValor;
    }
