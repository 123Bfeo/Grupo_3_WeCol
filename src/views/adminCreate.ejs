<!DOCTYPE html>
<html lang="en">
<%- include('./partials/Head') %>

  <body class="adminCreateBody">
    <%- include('./partials/Header') %>

      <main class="adminCreateMain">
        <aside class="administratorInformation">
          <a href="">
            <h2 class="subtituloH2Small">Administradora</h2>
          </a>
          <article class="adminInfo">
            <div class="adminProfile">
              <picture> <img src="/img/Ellipse9.png" alt="" /></picture>
              <h3 class="subtituloH3">Patricia Ochoa</h3>
            </div>
            <div class="adminSideOptions">
              <div>
                <i class="fas fa-file-invoice"></i>
                <span>Productos</span>
              </div>
              <div>
                <i class="fas fa-trash-alt"></i>
                <span>Eliminar Productos</span>
              </div>
            </div>
          </article>
        </aside>
        <section class="adminProductInformation">
          <%- include("./partials/allProductStock") %>
            <article class="adminSearchProducts">
              <input type="text" placeholder="Search" />
              <button class="adminSearchButton">Buscar</button>
            </article>
            <article class="adminListOptions">
              <div class="adminFilterProduct">
                <div>
                  <span>Todo</span>
                  <i class="fas fa-angle-down"></i>
                </div>
                <div>
                  <span>Todas las marcas</span>
                  <i class="fas fa-angle-down"></i>
                </div>
              </div>
              <i class="fas fa-list"></i>
            </article>
            <%- include("./partials/adminListStock") %>
        </section>
      </main>
      <div id="openModal" class="modalDialog">
        <div class="modal-content">
          <a href="#close" title="Close" class="close">X</a>
          <form action="/products/insert" method="post" class="form-product">
            <h3>FORMULARIO DE REGISTRO</h3>
            <br>
            <div class="item-product">
              <div class="iplabel">
                <label for="nombre">Ingrese nombre del producto</label>
              </div>
              <input type="text" name="nombre" placeholder="Nombre" required="true">
            </div>
            <div class="item-product">
              <div class="iplabel">
                <label for="price">Ingrese el precio de venta</label>
              </div>
              <input type="number" min="1" name="price" placeholder="Precio" required="true">
            </div>
            <div class="item-product">
              <div class="iplabel">
                <label for="desc">Ingrese una descripci√≥n del producto</label>
              </div>
              <textarea name="desc" id="" cols="70" rows="2" required="true"></textarea>
            </div>
            <div class="item-product">
              <div class="iplabel">
                <label for="image">Cargue una imagen del producto</label>
              </div>
              <input type="file" name="image" required="true">
            </div><br>
            <button type="submit">Enviar Formulario</button>

          </form>
        </div>
      </div>

  </body>

</html>